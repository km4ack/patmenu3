#!/bin/bash

#Pat SMS Manager
#20220720 KM4ACK
#21FEB2025 last edit KM4ACK

LOGO=${MYPATH}/pmlogo.png
MAIN=${MYPATH}/patmenu

yad --form --width=420 --text-align=center --center --title="Pat SMS Manager" --text-align=center \
--image $LOGO --window-icon=$LOGO --image-on-top --separator="|" --item-separator="|" \
--text="<b>Pat SMS Manager</b> by KM4ACK" \
--field="Send Text Message":fbtn 'bash -c "kill -USR1 $YAD_PID; ${MYPATH}/bin/sms/winlink2sms"' \
--field="Show Current Carrier List":fbtn 'bash -c "kill -USR1 $YAD_PID; ${MYPATH}/bin/sms/current-carriers"' \
--field="Add Carriers":fbtn 'bash -c "kill -USR1 $YAD_PID; ${MYPATH}/bin/sms/add-carrier"' \
--field="Remove Carriers":fbtn 'bash -c "kill -USR1 $YAD_PID; ${MYPATH}/bin/sms/remove-carrier"' \
--button="Main Menu":1

BUT=$?

if [ $BUT = 1 ]; then
  ${MAIN} & exit
elif [ $BUT = 252 ]; then
  exit
fi
